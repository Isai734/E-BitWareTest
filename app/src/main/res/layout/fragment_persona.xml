<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10sp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/flid"
                android:layout_width="60sp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5sp">

                <TextView
                    android:id="@+id/c_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:text="9203"
                    android:textSize="25sp" />
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/flid"
                android:layout_marginRight="10sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/c_nombre"
                    style="@style/Base.TextAppearance.AppCompat.Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="5sp"
                    android:text="Isai Castro ALvarado" />

                <View
                    android:id="@+id/div"
                    style="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="2sp"
                    android:layout_below="@+id/c_nombre"
                    android:layout_marginLeft="10sp"

                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/c_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/div"
                    android:layout_marginBottom="5sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="5sp"
                    android:text="isaicastro60@gmail.com" />

                <TextView
                    android:id="@+id/c_edad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/div"
                    android:layout_marginRight="5sp"
                    android:layout_marginTop="5sp"
                    android:text="Edad: 12" />

                <View
                    android:id="@+id/v_edit"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/pencil" />
            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
